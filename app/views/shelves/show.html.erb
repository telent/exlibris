<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @shelf.name %>
</p>

<p>
  <b>Owner:</b>
  <%= @shelf.owner.name %>
</p>

<table>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.owner.name %></td>
    <td><%= b=book.borrower and b.name %></td>
    <td><%= book.shelf.name %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>

    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<%= link_to 'Edit', edit_shelf_path(@shelf) %> |
