<h1>Listing books</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Owner</th>
    <th>Borrower</th>
    <th>Shelf</th>
    <th>Edition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.owner %></td>
    <td><%= book.borrower %></td>
    <td><%= book.shelf %></td>
    <td><%= book.edition %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

